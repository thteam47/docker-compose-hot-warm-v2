{
  "policy": {
    "phases": {
      "hot": {
        "actions": {
          "rollover": {
            "max_age": "2m",
            "max_docs": 1000
          },
          "set_priority": {
            "priority": 100
          }
        }
      },
      "warm": {
        "min_age": "2m",
        "actions": {
          "set_priority": {
            "priority": 50
          }
        }
      },
      "cold": {
        "min_age": "5m",
        "actions": {
          "set_priority": {
            "priority": 0
          },
          "searchable_snapshot": {
            "snapshot_repository": "logs-snapshots-repository"
          }
        }
      },
      "delete": {
        "min_age": "7m",
        "actions": {
          "wait_for_snapshot": {
            "policy": "logs-snapshot-policy"
          },
          "delete": {}
        }
      }
    }
  }
}