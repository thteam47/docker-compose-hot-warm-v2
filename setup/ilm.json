{
  "policy": {
    "phases": {
      "hot": {
        "actions": {
          "rollover": {
            "max_age": "2m",
            "max_docs": 5
          },
          "set_priority": {
            "priority": 100
          }
        }
      },
      "warm": {
        "min_age": "2m",
        "actions": {
          "readonly" : { },
          "allocate" : {
            "number_of_replicas" : 0,
            "include" : {
              "box_type" : "warm"
            }
          },
          "forcemerge": {
            "max_num_segments": 1
          },
          "set_priority": {
            "priority": 50
          }
        }
      },
      "cold": {
        "min_age": "5m",
        "actions": {
          "allocate" : {
            "number_of_replicas" : 0,
            "include" : {
              "box_type" : "cold"
            }
          },
          "set_priority": {
            "priority": 0
          }
        }
      },
      "delete": {
        "min_age": "7m",
        "actions": {
          "wait_for_snapshot": {
            "policy": "logs-snapshot-policy"
          },
          "delete": {}
        }
      }
    }
  }
}